<?xml version="1.0" encoding="utf-8" ?>
<appSettings>
  <!--
  ============================================================================
  Star Citizen Stream Deck Plugin - Configuration
  ============================================================================
  
  AUTOMATIC DETECTION:
  The plugin automatically detects your Star Citizen installation by:
    1. Reading RSI Launcher configuration (%APPDATA%\rsilauncher\)
    2. Checking Windows Registry
    3. Scanning common installation paths
    4. Checking Steam libraries
  
  MANUAL CONFIGURATION (only if automatic detection fails):
  Set SCBasePath to your Star Citizen installation directory.
  All other paths are automatically derived from this single setting.
  
  SCBasePath: Your Star Citizen installation directory
    Standard:  C:\Program Files\Roberts Space Industries\StarCitizen
    Custom:    F:\Roberts Space Industries\StarCitizen
  
  UsePTU: Use PTU (Public Test Universe) instead of LIVE
    Default: false
  
  LEGACY SETTINGS (optional overrides, usually not needed):
  SCData_p4k and SCClientProfilePath can override auto-derived paths if needed.
  ============================================================================
  -->

  <!-- Only set this if automatic detection fails -->
  <add key="SCBasePath" value="" />
  
  <!-- Set to true for PTU instead of LIVE -->
  <add key="UsePTU" value="false" />
  
  <!-- Legacy overrides (usually not needed) -->
  <add key="SCData_p4k" value="" />
  <add key="SCClientProfilePath" value="" />

  <!-- Enable CSV export for key bindings (default: false) -->
  <add key="EnableCsvExport" value="false" />
</appSettings>
